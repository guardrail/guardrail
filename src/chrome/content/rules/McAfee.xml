<!-- Av vendor. promos.mcafee.com lacks https -->
<ruleset name="McAfee">
	<target host="mcafee.com" />
	<target host="www.mcafee.com" />
	<target host="home.mcafee.com" />
	<target host="images.mcafee.com" />
	<target host="images.scanalert.com"/>
	<target host="mcafeesecure.com" />
	<target host="www.mcafeesecure.com" />
	<target host="secureimages.mcafee.com" />
	<target host="shop.mcafee.com" />
	<rule from="^http://www\.mcafee\.com/" to="https://www.mcafee.com/"/>
	<rule from="^http://home\.mcafee\.com/" to="https://home.mcafee.com/"/>
	<rule from="^http://shop\.mcafee\.com/" to="https://shop.mcafee.com/"/>
	<rule from="^http://images\.mcafee\.com/" to="https://images.mcafee.com/"/>
	<rule from="^http://images\.scanalert\.com/" to="https://images.scanalert.com/"/>
	<rule from="^http://secureimages\.mcafee\.com/" to="https://secureimages.mcafee.com/"/>
	<rule from="^http://www\.mcafeesecure\.com/" to="https://www.mcafeesecure.com/"/>
</ruleset>
